<div class="card" id="<%- card.type + '-card'%>" data-id="<%- card.contentId %>">
    <div class="card-head">
        <div class="title-wrapper">
            <p id="card-title"><%- card.name %></p>
        </div>
    </div>
    <div class="card-content">
        <% if (card.type == 'film'){ %>
        <iframe width="100%" height="200" src=<%- card.url %> frameborder="0" allowfullscreen></iframe>
        <% } else if (card.type == 'pic'){ %>
        <% if (card.url.split('.').pop() === 'mp4'){ %>
            <video width="100%" height="200" autoplay loop src=<%- card.url %>></video>
        <% } else { %>
            <div id="image-container" style="<%- "background-image: url("+card.url+")" %>"></div>
        <% } %>
        <% } else if (card.type == 'music'){ %>
        <iframe width="100%" height="200" scrolling="no" frameborder="no" src=<%- card.url %>></iframe>
        <% } else if (card.type == 'news'){ %>
        <p style="font-size:28px; line-height:38px; color: #333; margin-left: 20px; padding-top: 20px; margin-right: 15px;"><%= card.url %></p>
        <% } %>
    </div>
    <div class="card-footer">
        <% if (card.type == 'film'){ %>
        <div class="card-footer-stats film-bg">
        <% } else if (card.type == 'pic'){ %>
        <div class="card-footer-stats pic-bg">
        <% } else if (card.type == 'music'){ %>
        <div class="card-footer-stats music-bg">
        <% } else if (card.type == 'news'){ %>
        <div class="card-footer-stats news-bg">
        <% } %>
            <div class="left-side">
                <i class="flaticon-eye110"></i>
                <p id="card-views">
                    <% if (card.type == 'news') { %>
                    >
                    <% } %>
                    <% if (card.views < 1000){ %>
                    <%- card.views %>
                    <% } else if (card.views < 1000000){ %>
                    <%- Math.round((card.views/1000) * 10) / 10 + "K" %>
                    <% } else if (card.views < 1000000000){ %>
                    <%- Math.round((card.views/1000000) * 10) / 10 + "M" %>
                    <% } else { %>
                    <%- Math.round((card.views/1000000000) * 10) / 10 + "B" %>
                    <% } %>
                </p>
            </div>
            <div class="right-side">
                <p id="card-comments"><%- card.comments_count %></p>
                <i class="flaticon-social11"></i>
                <% if (Object.keys(user).length){ %>
                <i class="flaticon-heart13 card-favorite"></i>
                <% } %>
            </div>
        </div>    
<!--        include('./views/cardCommentsPartial.ejs')-->
    </div>
</div>